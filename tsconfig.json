{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", 
    "outDir": "lib",
    "esModuleInterop": true,   
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true, 
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}